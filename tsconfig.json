{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "dist/lib",
    "sourceMap": true,
    "lib": ["dom", "es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}